{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2018",
    "module": "ESNext",
    "moduleResolution": "bundler", 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "types": ["jest", "node"],
    "paths": {
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/lib/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
